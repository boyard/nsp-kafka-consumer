# NSP Kafka Consumer Environment Configuration
# Copy this file to .env and set your actual values

# NSP Server Configuration
NSP_SERVER=YOUR_NSP_SERVER_IP_OR_HOSTNAME
NSP_USERNAME=your_username
NSP_PASSWORD=your_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=YOUR_KAFKA_SERVER:9192
KAFKA_GROUP_ID=nsp-kafka-consumer
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true

# SSL Configuration
KAFKA_SSL_CA_LOCATION=./certs/ca-cert.pem
KAFKA_SSL_CERTFILE=./certs/client-cert.pem
KAFKA_SSL_KEYFILE=./certs/client-key.pem
KAFKA_SSL_PASSWORD=your_ssl_password

# Certificate Store Passwords (if using P12 files)
KAFKA_TRUSTSTORE_PASSWORD=your_truststore_password
KAFKA_KEYSTORE_PASSWORD=your_keystore_password

# Token Configuration (automatically managed, but can be pre-set)
NSP_ACCESS_TOKEN=
NSP_REFRESH_TOKEN=
NSP_TOKEN_EXPIRY=

# Application Configuration
NSP_CONFIG_FILE=./nsp_config.ini
LOG_LEVEL=INFO

# Optional: Active Hours Configuration (Melbourne timezone)
ACTIVE_START_HOUR=7
ACTIVE_END_HOUR=18

# Optional: Token Refresh Interval (minutes)
TOKEN_REFRESH_INTERVAL=30
